<div class="container my-5">
  <div class="page-info mb-4">
    <h3>会員一覧</h3>
  </div>
  <% if @customers.present? %>
    <table class="table table-bordered table-sm table-hover text-center">
      <thead>
        <tr>
          <th>顧客ID</th>
          <th>氏名</th>
          <th>電話番号</th>
          <th>郵便番号</th>
          <th>メールアドレス</th>
          <th>会員ステータス</th>
          <th>編集リンク</th>
        </tr>
      </thead>
      <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= customer.fullname %></td>
          <td><%= customer.phone_number %></td>
          <td><%= customer.post_code %></td>
          <td><%= customer.email %></td>
          <td class="<%= customer.is_deleted ? "text-danger" : "text-success" %>">
          <%= customer.is_deleted ? "退会済" : "有効" %>
          </td>
          <td><%= link_to "編集", edit_admin_customer_path(customer.id), class: "btn btn-info btn-sm btn-block" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-center">
      <%= paginate @customers %>
    </div>
  <% else %>
    <h5 class="text-center">まだ登録された会員はいません</h5>
  <% end %>
</div>