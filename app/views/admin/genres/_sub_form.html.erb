<%= form_with model: [:admin, subgenre] do |f| %>
  <div class="form-group row">
    <%= f.collection_select :genre_id, genres, :id, :name, prompt: "--選択してください--" %>
    <%= f.label :name ,class: "font-weight-bold mr-3" %>
    <%= f.text_field :name, :placeholder => "サブジャンル名"%>
    <%= button_tag type: "submit", class: "btn btn-outline-secondary btn-sm ml-3" do %>
      <i class="fa-solid fa-square-plus fa-xl" style="color: #640125;"></i>
    <% end %>
  </div>
<% end %>