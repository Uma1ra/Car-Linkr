<%= form_with model: [:admin, subgenre], local: false do |f| %>
  <div id="sub_errors">
    <%= render "public/shared/error_messages", resource: subgenre %>
  </div>
  <div class="form-group row">
    <%= f.collection_select :genre_id, genres, :id, :name, prompt: "-ジャンル選択-" %>
    <%= f.text_field :name, autofocus: true, placeholder: "サブジャンル名", class: "ml-3"%>
    <%= button_tag type: "submit", class: "btn btn-outline-secondary btn-sm ml-3" do %>
      <i class="fa-solid fa-square-plus fa-xl" style="color: #640125;"></i>
    <% end %>
  </div>
<% end %>
