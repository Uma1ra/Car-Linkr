<div class="container mt-4">
  <div class="row">
    <% if current_customer %>
      <div class="cars" style="width: 100%;">
        <%= render "index", cars: @cars %>
      </div>
    <% else %>
      <div class="public-index cars">
        <%= render "index", cars: @cars %>
      </div>
      <div class="login ">
        <h2 class="text-center mb-4">会員ログイン</h2>

        <%= form_with model: @customer, url: customer_session_path, method: :post do |f| %>
          <div class="field mb-2">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field mb-3">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <div class="actions mb-3 text-center">
            <%= f.submit "ログイン", class: "btn btn-primary btn-sm" %>
          </div>
          <p>
            無料会員登録は
            <%= link_to "こちら", new_customer_registration_path %>
          </p>
          <p>
            <%= link_to "ゲスト ログイン", guest_login_path, method: :post, class: "btn btn-info btn-block" %>
          </p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>