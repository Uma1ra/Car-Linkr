<div class="container mt-4">
  <%= render "index_text" %>
  <% if current_customer %>
    <div class="login-genre-index">
      <div class="login-index">
        <%= render "genre_index", genres: @genres %>
      </div>
    </div>
    <div class="cars" style="width: 100%;">
      <%= render "index", cars: @cars %>
    </div>
  <% else %>
    <div class="top-index">
      <div class="public-genre-index">
        <%= render "genre_index", genres: @genres %>
      </div>
      <div class="login ">
        <h2 class="text-center mt-3 mb-4">会員ログイン</h2>

        <%= form_with model: @customer, url: customer_session_path, method: :post do |f| %>
          <div class="field mb-2">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field mb-3">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <div class="actions mb-3 text-center">
            <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
          <p>
            無料会員登録は
            <%= link_to "こちら", new_customer_registration_path %>
          </p>
          <p>
            <%= link_to "ゲスト ログイン", guest_login_path, method: :post, class: "btn btn-info btn-block" %>
          </p>
        <% end %>
      </div>
      <div class="public-index cars">
        <%= render "index", cars: @cars %>
      </div>
    </div>
  <% end %>
</div>