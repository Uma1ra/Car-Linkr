<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  
  <div class="field">
    <%= f.label "氏名", class: "col-md-2 col-sm-3"%>
    <%= f.label :last_name, "(姓)", class: "col-lg-1 col-md-3 col-sm-4 mb-3" %>
    <%= f.text_field :last_name, placeholder: "令和", autofocus: true, required: true, class: "col-lg-3 col-md-3 mx-2" %>
    <%= f.label :first_name, "(名)", class: "col-lg-1 col-md-3 col-sm-4 mb-3" %>
    <%= f.text_field :first_name, placeholder: "道子", autofocus: true, required: true, class: "col-lg-3 col-md-3 mx-2" %>
  </div>
  
  <div class="field">
    <%= f.label "フリガナ", class: "col-md-2 col-sm-3 mb-3" %>
    <%= f.label :last_name_kana, "(セイ)", class: "col-lg-1 col-md-3 col-sm-4 mb-3" %>
    <%= f.text_field :last_name_kana, placeholder: "レイワ", autofocus: true, required: true, class: "col-lg-3 col-md-3 mx-2" %>
    <%= f.label :first_name_kana, "(メイ)", class: "col-lg-1 col-md-3 col-sm-4 mb-3" %>
    <%= f.text_field :first_name_kana, placeholder: "ミチコ", autofocus: true, required: true, class: "col-lg-3 col-md-3 mx-2" %>
  </div>
  
  <div class="field">
    <%= f.label :phone_number, "電話番号", class: "col-md-3 col-sm-3 mb-3" %>
    <%= f.text_field :phone_number, placeholder: "00000000000", autofocus: true, autocomplete: "phone_number", class: "col-lg-3 col-md-3 mx-2" %>
  </div>
  
  <div class="field">
    <%= f.label :post_code, "郵便番号", class: "col-md-3 col-sm-3 mb-3" %>
    <%= f.text_field :post_code, placeholder: "0000000", autofocus: true, autocomplete: "post_code", class: "col-lg-3 col-md-3 mx-2" %>
  </div>
  
  <div class="field">
    <%= f.label :email, "メールアドレス", class: "col-md-3 col-sm-3 mb-3" %>
    <%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "email", class: "col-lg-3 col-md-3 mx-2" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード", class: "col-md-3 col-sm-3 mb-3" %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %>字必須)
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "col-lg-3 col-md-3 mx-2" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認用）", class: "col-md-3 col-sm-3 mb-3" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-lg-3 col-md-3 mx-2" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
