<div class="container">
  
  <h2>アカウントを作成</h2>
  <p>以下の情報を入力してください</p>

  <form>
    <%= form_with model: @customer, url: customer_registration_path do |f| %>

      <div class="form-group row">
        <div class="form-label">
          <%= f.label "氏名" %>
        </div>
        <span class="sub-label">
          <%= f.label :last_name, "(姓)" %>
        </span>
        <div class=" input-field">
          <%= f.text_field :last_name, placeholder: "令和", autofocus: true, required: true %>
        </div>
        <span class="sub-label">
          <%= f.label :first_name, "(名)"  %>
        </span>
        <div class=" input-field">
          <%= f.text_field :first_name, placeholder: "道子", autofocus: true, required: true %>
        </div>
      </div>

      <div class="form-group row">
        <div class="form-label">
          <%= f.label "フリガナ"  %>
        </div>
        <span class="sub-label">
          <%= f.label :last_name_kana, "(セイ)"  %>
        </span>
        <div class=" input-field">
          <%= f.text_field :last_name_kana, placeholder: "レイワ", autofocus: true, required: true %>
        </div>
        <span class="sub-label">
          <%= f.label :first_name_kana, "(メイ)"  %>
        </span>
        <div class=" input-field">
          <%= f.text_field :first_name_kana, placeholder: "ミチコ", autofocus: true, required: true %>
        </div>
      </div>

      <div class="form-group row">
        <div class="form-label">
          <%= f.label :phone_number, "電話番号"  %>
        </div>
        <div class=" input-field">
          <%= f.text_field :phone_number, placeholder: "00000000000", autofocus: true, autocomplete: "phone_number" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="form-label">
          <%= f.label :post_code, "郵便番号"  %>
        </div>
        <div class=" input-field">
          <%= f.text_field :post_code, placeholder: "0000000", autofocus: true, autocomplete: "post_code" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="form-label">
          <%= f.label :email, "メールアドレス"  %>
        </div>
        <div class=" input-field">
          <%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="form-label">
          <%= f.label :password, "パスワード"  %>
        <span><% if @minimum_password_length %>
          (<%= @minimum_password_length %>字必須)
        <% end %></span>
        </div>
        <div class=" input-field">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="form-label">
          <%= f.label :password_confirmation, "パスワード（確認用）"  %>
        </div>
        <div class=" input-field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="actions text-center">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>

    <p class="text-center mt-5">会員登録がお済みの方はこちらから<%= link_to "ログイン", root_path %></p>
  </form>
</div>