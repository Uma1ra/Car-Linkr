<%= form_with url: mypage_path, method: :get do |f| %>
  <div class="form-group">
    <div class="form-label">
      <%= f.label :appointment_id, "予約ID" %>
    </div>
    <div class="input-field">
      <%= f.text_field :appointment_id, placeholder: "ID", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="form-label">
      <%= f.label :guest_email, "メールアドレス" %>
    </div>
    <div class="input-field">
      <%= f.text_field :guest_email, placeholder: "申し込み時のメールアドレス", class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "検索", class: "btn btn-info btn-block mt-4" %>
  </div>
<% end %>