<div class="container">
  <h1>会員情報編集</h1>
  <%= form_with model: @customer, url: information_update_path do |f| %>
  
    <div class="field">
      <%= f.label "氏名", class: "col-md-2 col-sm-3"%>
      <%= f.label :last_name, "(姓)", class: "col-lg-1 col-md-3 col-sm-4 mb-3" %>
      <%= f.text_field :last_name, autofocus: true, class: "col-lg-3 col-md-3 mx-2" %>
      <%= f.label :first_name, "(名)", class: "col-lg-1 col-md-3 col-sm-4 mb-3" %>
      <%= f.text_field :first_name, autofocus: true, class: "col-lg-3 col-md-3 mx-2" %>
    </div>
    
    <div class="field">
      <%= f.label "フリガナ", class: "col-md-2 col-sm-3 mb-3" %>
      <%= f.label :last_name_kana, "(セイ)", class: "col-lg-1 col-md-3 col-sm-4 mb-3" %>
      <%= f.text_field :last_name_kana, autofocus: true, class: "col-lg-3 col-md-3 mx-2" %>
      <%= f.label :first_name_kana, "(メイ)", class: "col-lg-1 col-md-3 col-sm-4 mb-3" %>
      <%= f.text_field :first_name_kana, autofocus: true, class: "col-lg-3 col-md-3 mx-2" %>
    </div>
    
    <div class="field">
      <%= f.label :phone_number, "電話番号", class: "col-md-3 col-sm-3 mb-3" %>
      <%= f.text_field :phone_number, autofocus: true, class: "col-lg-3 col-md-3 mx-2" %>
    </div>
    
    <div class="field">
      <%= f.label :post_code, "郵便番号", class: "col-md-3 col-sm-3 mb-3" %>
      <%= f.text_field :post_code, autofocus: true, class: "col-lg-3 col-md-3 mx-2" %>
    </div>
    
    <div class="field">
      <%= f.label :email, "メールアドレス", class: "col-md-3 col-sm-3 mb-3" %>
      <%= f.email_field :email, autofocus: true, class: "col-lg-3 col-md-3 mx-2" %>
    </div>
  
    <div class="field">
      <%= f.label :password, "パスワード", class: "col-md-3 col-sm-3 mb-3" %>
      <% if @minimum_password_length %>
      (<%= @minimum_password_length %>字必須)
      <% end %>
      <%= f.password_field :password, class: "col-lg-3 col-md-3 mx-2" %>
    </div>
  
    <div class="field">
      <%= f.label :password_confirmation, "パスワード（確認用）", class: "col-md-3 col-sm-3 mb-3" %>
      <%= f.password_field :password_confirmation, class: "col-lg-3 col-md-3 mx-2" %>
    </div>
  
    <div class="actions">
      <%= f.submit "更新" %>
    </div>
  <% end %>
</div>