<div class="page-info mb-4 text-center">
  <h5>ご連絡先</h5>
</div>

<div class="form-group">
  <div class="form-label">
    <%= f.label :name, "氏名" %>
  </div>
  <div class="input-field">
    <%= f.text_field :name, autofocus: true, placeholder: "令和 道子", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="form-label">
    <%= f.label :phone_number, "電話番号" %>
  </div>
  <div class="input-field">
    <%= f.text_field :phone_number, autofocus: true, placeholder: "0000000000", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="form-label">
    <%= f.label :post_code, "郵便番号" %>
  </div>
  <div class="input-field">
    <%= f.text_field :post_code, autofocus: true, placeholder: "0000000", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="form-label">
    <%= f.label :email, "メールアドレス" %>
  </div>
  <div class="input-field">
    <%= f.text_field :email, autofocus: true, placeholder: "example@mail.com", class: "form-control" %>
  </div>
</div>
